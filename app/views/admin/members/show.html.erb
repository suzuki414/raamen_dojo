<div class="container">
  <div class="row mt-5">
    <div class="col-xl-4"></div>
    <div class="title-bg-color col-xl-4 pt-2 text-center">
      <h2><b>会員詳細</b></h2>
    </div>
    <div class="col-xl-4"></div>
  </div>
  <div class="row">
    <div class="col-xl-12">
      <div class="card-border card w-100 pr-5 my-5 shadow bg-body rounded">
        <div class="card-body">
          <div class="row ml-5 text-center">
            <div class="col-xl-4">
              <%= image_tag(@member.get_profile_image(300, 300), class: "rounded-circle border border-warning mt-4 mb-5") %>
            </div>
            <div class="col-xl-8 mt-2">
              <table class="table table-borderless">
                <tr>
                  <th><label class="form-title bg-warning rounded-pill p-2 shadow bg-body-tertiary text-center">会員ステータス</label></th>
                  <% if @member.is_active %>
                    <td class="mypage-text text-center pt-4"><strong style="color: green;">有効</strong></td>
                  <% else %>
                    <td class="mypage-text text-center pt-4"><strong style="color: red;">退会済み</strong></td>
                  <% end %>
                </tr>
                <tr>
                  <th><label class="form-title bg-warning rounded-pill p-2 shadow bg-body-tertiary text-center">名前</label></th>
                  <td class="mypage-text text-center pt-4"><b><%= @member.name %></b></td>
                </tr>
                <tr>
                  <th><label class="form-title bg-warning rounded-pill p-2 shadow bg-body-tertiary text-center">サイト表示名</label></th>
                  <td class="mypage-text text-center pt-4"><b><%= @member.nickname %></b></td>
                </tr>
                <tr>
                  <th><label class="form-title bg-warning rounded-pill p-2 shadow bg-body-tertiary text-center">ひとこと</label></th>
                  <td class="mypage-text text-center pt-4"><b><%= @member.comment %></b></td>
                </tr>
                <tr>
                  <th><label class="form-title bg-warning rounded-pill p-2 shadow bg-body-tertiary text-center">メールアドレス</label></th>
                  <td class="mypage-text text-center pt-4"><b><%= @member.email %></b></td>
                </tr>
              </table>
            </div>
          </div>
          <div class="row mb-4 ml-2">
            <div class="col-xl-12 ml-3">
              <%= link_to '会員情報編集', edit_admin_member_path, class: "btn btn-outline-warning btn-lg mr-2 shadow bg-body rounded", style: "width: 220px;" %>
              <%= link_to '投稿一覧 (' + @member.ramen_noodles.count.to_s + ')', admin_ramen_noodles_path(member_ramen_noodle: "true", member_id: @member.id), class: "btn btn-outline-warning btn-lg mr-2 shadow bg-body rounded", style: "width: 220px;" %>
              <%= link_to 'いいねした投稿', admin_ramen_noodles_path(member_ramen_noodle_favorite: "true", member_id: @member.id), class: "btn btn-outline-warning btn-lg mr-2 shadow bg-body rounded", style: "width: 220px;" %>
              <%= link_to admin_member_follow_path(@member.id, member_followings: "true"), class: "btn btn-outline-warning btn-lg shadow bg-body rounded", style: "width: 300px;" do %>
                フォロー&nbsp;&#40;<%= @member.followings.count %>&#41;&nbsp;/&nbsp;フォロワー&nbsp;&#40;<%= @member.followers.count %>&#41;
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>