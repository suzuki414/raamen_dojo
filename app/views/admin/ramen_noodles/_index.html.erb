<% if ramen_noodles.present? %>
  <% ramen_noodles.each do |ramen_noodle| %>
      <div class="col-md-6 mb-3">
        <div class="card shadow bg-body rounded">
          <%= link_to admin_ramen_noodle_path(ramen_noodle) do %>
            <div class="row">
              <div class="col-xl-6">
                <%= image_tag(ramen_noodle.post_image, class: 'img-fluid', style: 'width: 100%; height: 100%; object-fit: cover;') %>
              </div>
              <div class="col-xl-6">
                <div class="card-body">
                  <div class="profile text-center">
                    <%= image_tag(ramen_noodle.member.get_profile_image(50, 50), class: "rounded-circle border border-warning mr-2") %>
                    <%= ramen_noodle.member.nickname %>
                  </div>
                  <div class="title my-3">
                    <b>&#149;<%= ramen_noodle.title %></b>
                  </div>
                  <div id="average_rating">
                    <span id="average_rating_<%= ramen_noodle.id %>"></span>
                    <%= ramen_noodle.average_rating.floor(1) %>
                  </div>
                  <div class="action mt-3">
                    <p>
                      <i class="fa-solid fa-thumbs-up fa-xl" style="color: #ff0000;"></i>：<%= ramen_noodle.favorites.count %>
                      <i class="fa-regular fa-comment fa-xl ml-4" style="color: #ff0000;"></i>：<%= ramen_noodle.ramen_noodle_comments.count %>
                    </p>
                  </div>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      </div>
  <% end %>
<% else %>
  <div class="col-xl-12 my-5 text-center">
    <strong>投稿がありません</strong>
  </div>
<% end %>