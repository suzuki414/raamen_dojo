<div class="container">
  <div class="row mt-5">
    <div class="col-xl-3"></div>
    <div class="title-bg-color col-xl-6 pt-2 text-center">
      <h2><b>フォロー/フォロワー一覧</b></h2>
    </div>
    <div class="col-xl-3"></div>
  </div>
  <div class="row">
    <div class="col-xl-12">
      <div class="card-border card w-100 my-5 py-1 shadow bg-body rounded">
        <div class="card-body">
          <div class="row">
            <div class="col-xl-12 mb-3">
              <ul class="nav nav-tabs">
                <li class="nav-sort">
                  <a class="nav-link <%= 'active' unless params[:follower] %>" aria-current="page" href="<%= admin_member_follow_path(@member) %>">フォロー&#40;<%= @member.followings.count %>&#41;</a>
                </li>
                <li class="nav-sort">
                  <a class="nav-link <%= 'active' if params[:follower] %>" aria-current="page" href="<%= admin_member_follow_path(@member.id, follower: "true") %>">フォロワー&#40;<%= @member.followers.count %>&#41;</a>
                </li>
              </ul>
            </div>
          </div>
          <div class="row">
            <% if @members.present? %>
              <% @members.each do |member| %>
                <div class="col-4 my-3">
                  <%= link_to admin_member_path(member) do %>
                    <div class="card w-100 shadow bg-body rounded">
                      <div class="card-body">
                        <div class="row">
                          <div class="col-xl-4 pt-2">
                            <%= image_tag(member.get_profile_image(100, 100), class: "img-fluid rounded-circle border border-warning") %>
                          </div>
                          <div class="col-xl-8">
                            <div class="row">
                              <div class="col-xl-6 text-left">
                                <b><%= member.nickname %></b>
                              </div>
                              <% unless member.is_active %>
                                <div class="col-xl-6 text-right">
                                  <strong style="color: red;">退会済み</strong>
                                </div>
                              <% end %>
                            </div>
                            <div class="row">
                              <div class="col-xl-12 text-left">
                                投稿数&nbsp;&#0058;&nbsp;<%= member.ramen_noodles.count %>&nbsp;<br>
                                フォロー数&nbsp;&#0058;&nbsp;<%= member.followings.count %>&nbsp;<br>
                                フォロワー数&nbsp;&#0058;&nbsp;<%= member.followers.count %>&nbsp;
                              </div>
                            </div>
                          </div>
                        </div>
                      </div>
                    </div>
                  <% end %>
                </div>
              <% end %>
            <% else %>
              <div class="col-xl-12 my-5 text-center">
                <strong>会員がいません</strong>
              </div>
            <% end %>
          </div>
          <div class="row">
            <div class="col-xl-4"></div>
            <div class="col-xl-4">
              <%= paginate @members %>
            </div>
            <div class="col-xl-4"></div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>