<%= image_tag("会員詳細暖簾.svg", class: "img-fluid") %>
<div class="container">
  <div class="row">
    <div class="col-xl-12">
      <div class="card-border card w-100 pr-5 my-5 shadow bg-body rounded">
        <div class="card-body">
          <div class="row">
            <div class="col-xl-4">
              <%= image_tag(@member.get_profile_image(300, 300), class: "rounded-circle border border-warning mt-4 mb-5") %>
            </div>
            <div class="col-xl-8">
              <table class="table table-borderless">
                <tr>
                  <th class="form-title bg-warning rounded-pill shadow bg-body-tertiary text-center">サイト表示名</th>
                  <td class="text-center"><%= @member.nickname %></td>
                </tr>
                <tr>
                  <th class="form-title bg-warning rounded-pill shadow bg-body-tertiary text-center">ひとこと</th>
                  <td class="text-center"><%= @member.comment %></td>
                </tr>
              </table>
              <div class="row">
                <div class="col-xl-4"></div>
                <div class="col-xl-4">
                  <% if current_member && current_member != @member %>
                    <div id="follow-ajax">
                      <%= render "public/relationships/follow", member: @member %>
                    </div>  
                  <% end %>
                </div>
                <div class="col-xl-4"></div>
              </div>
            </div>
          </div>
          <div class="row text-center">
            <div class="col-xl-4">
              <%= link_to "投稿一覧", ramen_noodles_path(member_ramen_noodle: "true", id: @member.id), class: "btn btn-outline-warning btn-lg shadow bg-body rounded", style: "width: 200px;" %>
            </div>
            <div class="col-xl-4">
              <%= link_to "いいねした投稿", ramen_noodles_path(member_ramen_noodle_favorite: "true", id: @member.id), class: "btn btn-outline-warning btn-lg shadow bg-body rounded", style: "width: 200px;" %>
            </div>
            <div class="col-xl-4">
              <%= link_to member_follow_path(@member.id, member_followings: "true"), class: "btn btn-outline-warning btn-lg shadow bg-body rounded", style: "width: 290px;" do %>
                フォロー&#40;<%= @member.followings.count %>&#41; / フォロワー&#40;<%= @member.followers.count %>&#41;
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>