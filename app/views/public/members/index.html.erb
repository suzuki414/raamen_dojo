<%= image_tag("会員一覧暖簾.svg", alt: "暖簾画像", class: "screen_title img-fluid") %>
<div class="container">
  <div class="row">
    <div class="col-12">
      <div class="card-border card w-100 px-2 my-3 my-md-5 shadow bg-body rounded">
        <div class="card-body mt-2">
          <div class="row">
            <div class="col-12 mb-3">
              <ul class="nav nav-tabs">
                <li class="nav-sort">
                  <a class="nav-link <%= 'active' unless params[:old] || params[:followed_count] || params[:ramen_noodle_count] %>" aria-current="page" href="<%= members_path %>">登録順(新)</a>
                </li>
                <li class="nav-sort">
                  <a class="nav-link <%= 'active' if params[:old] %>" aria-current="page" href="<%= members_path(old: "true") %>">登録順(古)</a>
                </li>
                <li class="nav-sort">
                  <a class="nav-link <%= 'active' if params[:followed_count] %>" aria-current="page" href="<%= members_path(followed_count: "true") %>">フォロワーが多い順</a>
                </li>
                <li class="nav-sort">
                  <a class="nav-link <%= 'active' if params[:ramen_noodle_count] %>" aria-current="page" href="<%= members_path(ramen_noodle_count: "true") %>">投稿が多い順</a>
                </li>
              </ul>
            </div>
          </div>
          <div class="row">
            <%= render "public/members/index", members: @members %>
          </div>
          <div class="row mt-4">
            <div class="col-xl-5 mr-2"></div>
            <div class="col-xl-5 ml-5">
              <%= paginate @members %>
            </div>
            <div class="col-xl-2"></div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>