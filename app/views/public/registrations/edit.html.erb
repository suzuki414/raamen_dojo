<div class="container">
  <div class="row">
    <!--<div class="col-xl-12">-->
      <div class="card text-center w-100 mb-3">
        <div class="card-body">
          <%= form_with model: @member, url: member_registration_path do |f| %>
            <%= render "public/shared/error_messages", resource: resource %>

            <div class="field">
              <%= f.label "プロフィール画像" %>
              <%= f.file_field :profile_image, accept: "image/*" %>
            </div>

            <div class="field">
              <%= f.label "名前" %>
              <%= f.text_field :name, autofocus: true %>
            </div>

            <div class="field">
              <%= f.label "ニックネーム" %>
              <%= f.text_field :nickname %>
            </div>

            <div class="field">
              <%= f.label "ひとこと" %>
              <%= f.text_field :comment %>
            </div>

            <div class="field">
              <%= f.label "メールアドレス" %>
              <%= f.email_field :email, autocomplete: "email" %>
            </div>

            <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
              <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
            <% end %>

            <div class="field">
              <%= f.label "パスワード" %> <i>(変更しない場合は、空白のままにしてください)</i><br>
              <%= f.password_field :password, autocomplete: "new-password" %>
              <% if @minimum_password_length %>
                <br>
                <em><%= @minimum_password_length %> 文字以上</em>
              <% end %>
            </div>

            <div class="field">
              <%= f.label "パスワード(確認用)" %><br>
              <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
            </div>

            <div class="field">
              <%= f.label "現在のパスワード" %> <i>(変更するには、現在のパスワードが必要です)</i><br>
              <%= f.password_field :current_password, autocomplete: "current-password" %>
            </div>

            <div class="actions">
              <%= f.submit "変更内容を保存", class: "btn btn-outline-warning" %>
              <%= link_to "退会", unsubscribe_path, class: "btn btn-outline-warning" %>
              <%= link_to "キャンセル", :back, class: "btn btn-outline-warning" %>
            </div>
          <% end %>
        </div>
      </div>
    <!--</div>-->
  </div>
</div>